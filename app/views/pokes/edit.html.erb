<style>
body {background-color: powderblue;}
h1   {color: blue;}
p    {color: black;}
td  {color: black}
</style>
<body background = "http://cdn.wallpapersafari.com/65/11/PJDkyp.jpg">
<h1>Edit Pokemon</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @poke.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @student.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @poke do |f| %>
  <p>
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :attack  %>
    <%= f.text_field :attack %>
  </p>

  <p>
    <%= f.label :defense %>
    <%= f.text_field :defense %>
  </p>

  <p>
    <%= f.label :avatar_url, "Imagen" %>
    <%= f.text_field :avatar_url %>
  </p>

  <p>
    <%= f.submit "Update" %>
    <%= link_to "Cancelar", poke_path(@poke) %>
  </p>

<% end %>
